#include <iostream>
#include <vector>
#include <algorithm>
#include <cstdlib> // For abs()
using namespace std;

int main() {
    int T; 
    cin >> T;

    while (T--) {
        int r; 
        cin >> r;

        vector<int> streets(r);
        for (int i = 0; i < r; ++i) {
            cin >> streets[i];
        }

        sort(streets.begin(), streets.end());
        int median = streets[r / 2]; 

        int totalDistance = 0;
        for (int i = 0; i < r; ++i) {
            totalDistance += abs(streets[i] - median);
        }

        cout << totalDistance << endl;
    }

    return 0;
}
